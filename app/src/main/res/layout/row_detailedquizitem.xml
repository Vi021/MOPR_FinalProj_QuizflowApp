<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consL_botContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/rounded_bg_white_clickable"
    android:backgroundTint="@color/xanh_botro7">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/cirImg_pfp"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="7dp"
        android:padding="1dp"
        android:src="@drawable/ic_default_pfp_blues"
        android:background="@drawable/circular_ring_bg_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="user0"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/cirImg_pfp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_quizCategory"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:text="CATEGORY"
        android:textAllCaps="true"
        android:textColor="@color/white80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consL_topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_bg_white"
        android:backgroundTint="@color/white95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_save"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_unsave_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/xanh_botro13"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_share_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_save"
            app:tint="@color/xanh_botro13"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/img_report"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_report_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_share"
            app:tint="@color/xanh_botro13"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txt_quizTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:minHeight="40dp"
            android:text="Quiz Title"
            android:textColor="@color/xanh_botro7"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/txt_quizDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="6"
            android:text="Description..."
            android:textColor="@color/xanh_botro13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_quizTitle"
            app:layout_constraintWidth_percent="0.8" />

        <ImageView
            android:id="@+id/img_question"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_question_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_quizDesc"
            app:tint="@color/xanh_botro13" />

        <TextView
            android:id="@+id/txt_questionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="999"
            android:textColor="@color/xanh_botro13"
            app:layout_constraintBottom_toBottomOf="@id/img_question"
            app:layout_constraintStart_toEndOf="@id/img_question"
            app:layout_constraintTop_toTopOf="@id/img_question" />

        <TextView
            android:id="@+id/txt_questionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Question Type(s):"
            android:textColor="@color/xanh_botro13"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_question" />

        <LinearLayout
            android:id="@+id/lineL_questionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_questionType">

            <LinearLayout
                android:id="@+id/lineL_mcq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_mcq"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mcq_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lineL_questionType"
                    app:tint="@color/xanh_botro13" />

                <TextView
                    android:id="@+id/txt_mcq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="Multi-choice"
                    android:textColor="@color/xanh_botro13"
                    app:layout_constraintBottom_toBottomOf="@id/img_timer"
                    app:layout_constraintStart_toEndOf="@id/img_timer"
                    app:layout_constraintTop_toTopOf="@id/img_timer" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineL_tf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_tf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_truefalse_white"
                    app:tint="@color/xanh_botro13" />

                <TextView
                    android:id="@+id/txt_tf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="True/False"
                    android:textColor="@color/xanh_botro13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineL_shortAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_shortAns"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_shortanswer_white"
                    app:tint="@color/xanh_botro13" />

                <TextView
                    android:id="@+id/txt_fillBlank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="Short Answer"
                    android:textColor="@color/xanh_botro13" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_timer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_timer_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineL_questionType"
            app:tint="@color/xanh_botro13" />

        <TextView
            android:id="@+id/txt_quizDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="99h99m99s"
            android:textColor="@color/xanh_botro13"
            app:layout_constraintBottom_toBottomOf="@id/img_timer"
            app:layout_constraintStart_toEndOf="@id/img_timer"
            app:layout_constraintTop_toTopOf="@id/img_timer" />

        <ImageView
            android:id="@+id/img_clock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_clock_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_quizDuration"
            app:tint="@color/xanh_botro13" />

        <TextView
            android:id="@+id/txt_createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="Creation Date: 01-01-2025"
            android:textColor="@color/xanh_botro13"
            app:layout_constraintBottom_toBottomOf="@id/img_clock"
            app:layout_constraintStart_toEndOf="@id/img_clock"
            app:layout_constraintTop_toTopOf="@id/img_clock" />

        <ImageView
            android:id="@+id/img_pen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_pen_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_createdDate"
            app:tint="@color/xanh_botro13" />

        <TextView
            android:id="@+id/txt_attempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="Attempt(s): 0"
            android:textColor="@color/xanh_botro13"
            app:layout_constraintBottom_toBottomOf="@id/img_pen"
            app:layout_constraintStart_toEndOf="@id/img_pen"
            app:layout_constraintTop_toTopOf="@id/img_pen" />

        <LinearLayout
            android:id="@+id/lineL_singlePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lineL_availability"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/img_singlePlayer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_singleplayer_white"
                app:tint="@color/xanh_botro13" />

            <TextView
                android:id="@+id/txt_singlePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="Single-player"
                android:textColor="@color/xanh_botro13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineL_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lineL_singlePlayer">

            <ImageView
                android:id="@+id/img_availability"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_globe_white"
                app:tint="@color/xanh_botro13" />

            <TextView
                android:id="@+id/txt_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="Public"
                android:textColor="@color/xanh_botro13" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>