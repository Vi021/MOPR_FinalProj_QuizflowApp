<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_gradient"
    tools:context=".activities.MainActivity" >

    <!-- fragment container -->
    <FrameLayout
        android:id="@+id/framL_fragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />

    <!-- bottom chip navigation -->
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/chipNav_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_chipnav_bg"
        app:cnb_iconColor="@color/white"
        app:cnb_iconSize="24dp"
        app:cnb_textColor="@color/white"
        app:cnb_menuResource="@menu/bot_chipnav_menu"
        app:cnb_orientationMode="horizontal"
        app:cnb_radius="30dp"
        app:cnb_unselectedColor="@color/xanh_ngoc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>